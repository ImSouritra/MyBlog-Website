<%- include("partials/header"); -%>
<h1>Compose</h1>
<form class="" action="/compose" method="post">
  <div class="mb-3">
    <label>Title</label>
    <input type="text" class="form-control"  name="postTitle" placeholder="">
  </div>
  <div class="mb-3">
    <label>Post</label>
    <textarea class="form-control"  name="postBody" rows="3" cols="30"></textarea>
  </div>
  <button type="submit" class="btn btn-primary publish" name="button">Publish</button>
</form>

